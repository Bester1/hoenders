{
  "name": "plaas-hoenders-admin",
  "version": "1.0.0",
  "description": "Plaas Hoenders Admin Dashboard with comprehensive testing suite",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "test": "jest --config tests/setup/jest.config.js",
    "test:watch": "jest --config tests/setup/jest.config.js --watch",
    "test:coverage": "jest --config tests/setup/jest.config.js --coverage",
    "test:security": "jest --config tests/setup/jest.config.js --selectProjects='Security Tests'",
    "test:performance": "jest --config tests/setup/jest.config.js --selectProjects='Performance Tests'",
    "test:e2e": "jest --config tests/setup/jest.config.js --selectProjects='E2E Tests'",
    "test:integration": "jest --config tests/setup/jest.config.js --selectProjects='Integration Tests'",
    "test:stress": "jest --config tests/setup/jest.config.js --selectProjects='Stress Tests'",
    "test:all": "npm run test:security && npm run test:performance && npm run test:integration && npm run test:stress",
    "test:ci": "jest --config tests/setup/jest.config.js --ci --coverage --watchAll=false",
    "lint": "eslint *.js tests/**/*.js --fix",
    "serve": "python3 -m http.server 3000",
    "serve:test": "concurrently \"npm run serve\" \"wait-on http://localhost:3000 && npm run test:e2e\"",
    "build:reports": "mkdir -p test-reports && npm run test:coverage",
    "clean": "rm -rf coverage test-reports node_modules/.cache",
    "security:scan": "npm audit && npm run test:security",
    "performance:baseline": "npm run test:performance | tee performance-baseline.txt",
    "validate": "npm run lint && npm run test:ci && npm run security:scan"
  },
  "dependencies": {
    
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@jest/globals": "^29.5.0",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.1.0",
    "puppeteer": "^20.5.0",
    "wait-on": "^7.0.1"
  },
  "jest": {
    "preset": "./tests/setup/jest.config.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "ignorePatterns": [
      "coverage/",
      "test-reports/",
      "node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bester1/hoenders.git"
  },
  "keywords": [
    "admin-dashboard",
    "chicken-orders",
    "invoice-management",
    "pdf-processing",
    "testing",
    "security",
    "performance"
  ],
  "author": "Adriaan Bester",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}